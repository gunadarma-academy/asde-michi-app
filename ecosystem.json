{
  /**
   * Application configuration section
   * http://pm2.keymetrics.io/docs/usage/application-declaration
   * http://pm2.keymetrics.io/docs/usage/specifics
   */
  apps: [

    {
      name: "arlin-backend",
      script: "src/",
      "node_args": "--harmony",
      "watch": ["config", "src", "public"],
      "ignore_watch": ["node_modules"],
      "watch_options": {
        "followSymlinks": false
      },
      env: {
        COMMON_VARIABLE: "true"
      },
      env_dev: {
        NODE_ENV: "dev",
        NEDB_BASE_PATH: "./data"
      },
      env_staging: {
        NODE_ENV: "staging",
        NEDB_BASE_PATH: "./data"
      },
      env_production: {
        NODE_ENV: "production",
        NEDB_BASE_PATH: "./data"
      }
    }

  ],

  /**
   * Deployment section
   * http://pm2.keymetrics.io/docs/usage/deployment
   */
  deploy: {
    dev: {
      user: "arlin",
      host: "128.199.216.87",
      ref: "origin/master",
      repo: "https://github.com/gunadarma-academy/asde-michi-app.git",
      path: "/home/arlin/app/dev",
      "post-deploy": "npm install ; pm2 startOrRestart ecosystem.json --env dev",
      env: {
        NODE_ENV: "dev"
      }
    },
    staging: {
      user: "arlin",
      host: "128.199.216.87",
      ref: "origin/master",
      repo: "https://github.com/gunadarma-academy/asde-michi-app.git",
      path: "/home/arlin/app/staging",
      "post-deploy": "npm install ; pm2 startOrRestart ecosystem.json --env staging",
      env: {
        NODE_ENV: "staging"
      }
    },
    production: {
      user: "arlin",
      host: "128.199.216.87",
      ref: "origin/master",
      repo: "https://github.com/gunadarma-academy/asde-michi-app.git",
      path: "/home/arlin/app/production",
      "post-deploy": "npm install ; pm2 startOrRestart ecosystem.json --env production"
    }
  }
}
